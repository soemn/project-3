<div class="card">
  <%= cl_image_tag @photo.photo_link, class:"card-img-top" %>
  <div class="card-body">
    <h4 class="card-title">
      <%= @photo.title %>
      <small>
        by:
        <%= link_to(@photo.user.name, users_path(@photo.user), class:"badge badge-secondary") %>
      </small>
    </h4>
    <p class="card-text"><%= @photo.description %></p>
    <p class="card-text">Points :
      <%= @photo_points %></p>
  </div>
</div>
